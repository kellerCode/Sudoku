                    {
                        <td id="sectionRow-@r-sec7-@i" class="sectionEnd"><input class="col-md-offset-5" name="sec7" type="number" /></td>
                    }
                    else
                    {
                        <td id="sectionRow-@r-sec7-@i"><input class="col-md-offset-5" name="sec7" type="number" /></td>
