                {
                    if (i == 2)
                    {
                        <td id="sectionRow-@r-sec4-@i" class="sectionEnd"><input class="col-md-offset-5" name="sec4" type="number" /></td>
                    }
                    else
                    {
                        <td id="sectionRow-@r-sec4-@i"><input class="col-md-offset-5" name="sec4" type="number" /></td>
                    }
                }
                @for (int i = 0; i < 3; i++)
                {
                    if (i == 2)
                    {
                        <td id="sectionRow-@r-sec5-@i" class="sectionEnd"><input class="col-md-offset-5" name="sec5" type="number" /></td>
                    }
                    else
                    {
                        <td id="sectionRow-@r-sec5-@i"><input class="col-md-offset-5" name="sec5" type="number" /></td>
